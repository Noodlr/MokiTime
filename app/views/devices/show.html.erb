<!DOCTYPE html>
<html>
    <head>
        
    </head>
    <body>
        <% @comment = @device.comments.order("created_at").last %>
        <% @comment_list = @device.comments.reverse %>
        <div class="container">
            <div class="navbar navbar-inverse">
                <p class="navbar-text">MokiTime</p>
                <ul class="nav navbar-nav">
                    <li><%= link_to("Device List", devices_path) %></li>
                </ul>
            </div>
            <h2><%= @device.name %></h2>
            <div class="row">
                <div class="col-sm-4">
                    <table>
                        <% if @device.comments.count > 0 %>
                            <tr>
                                <th>Status:</th>
                                <td><div class="status <%= status_class(@comment.status) %>"><%= @comment.status.name %></div></td>
                            </tr>
                            <tr>
                                <th>Last Updated:</th>
                                <td><%= @comment.created_at %></td>
                            </tr>
                        <% else %>
                            <tr>
                                <th>Status:</th>
                                <td><div class="status resolved">Online</div></td>
                            </tr>
                        <% end %>
                    </table>
                </div>
                <div class="col-sm-4">
                    <table>
                        <tr>
                            <th colspan="2">Address:</th>
                            <td colspan="2"><%= @device.location.address %></td>
                        </tr>
                        <tr>
                            <th>City:</th>
                            <td><%= @device.location.city %></td>
                            <th>State:</th>
                            <td><%= @device.location.state %></td>
                        </tr>
                        <tr>
                            <th colspan="2">Zip Code:</th>
                            <td colspan="2"><%= @device.location.zip %></td>
                        </tr>
                        <tr>
                            <th colspan="2">Phone Number:</th>
                            <td colspan="2"><%= @device.location.phone %></td>
                        </tr>
                    </table>
                </div>
                <div class="col-sm-4">
                    <table>
                        <tr>
                            <th>Company:</th>
                            <td><%= @device.location.company.name %></td>
                        </tr>
                        <tr>
                            <th>Application:</th>
                            <td><%= @device.software.name %></td>
                        </tr>
                    </table>

                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-8">
                    <h4>Comments</h4>
                    <div id="new-comment">
                        <%= render 'comments/form' %>
                    </div>
                    <div id="comment-list">
                        <%= render @comment_list %>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
