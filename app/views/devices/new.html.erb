<h2>New Device</h2>
<%= form_for :article do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :device_ID %> <br>
    <%= f.text_field :d_id %>
  </p>
  <p>
    <%= f.label :software %> <br>
    <%= collection_select( :device, :software_id, Software.all, :id, :name, {}, { :multiple => false } ) %>
  </p>
  <p>
    <%= f.label :address %> <br>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :city %> <br>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :phone %> <br>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :state %> <br>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip %> <br>
    <%= f.text_field :zip %>
  </p>
<% end %>

